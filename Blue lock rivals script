})

-- Cleanup quando il giocatore lascia
game.Players.PlayerRemoving:Connect(function(plr)
    if plr == player then
        moneyLoop = false
        spinsLoop = false
        flowSpinsLoop = false
        staminaLoop = false
        styleLoop = false
    end
end)

