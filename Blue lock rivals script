-- ⚠️ Assicurati di usare questo solo in LocalScript (es: StarterPlayerScripts)
-- ⚠️ Rayfield deve essere già supportato nel tuo gioco (come da source.txt)

local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

local player = game.Players.LocalPlayer
local stats = player:WaitForChild("PlayerStats")

local Window = Rayfield:CreateWindow({
	Name = "Blue Lock - Spin Menu",
	LoadingTitle = "Caricamento...",
	LoadingSubtitle = "Sistema di Spin Personalizzato",
	ConfigurationSaving = {
		Enabled = false
	}
})

local SpinTab = Window:CreateTab("⚙️ Cheat Toggles")

-- Funzioni per settare o resettare i valori
local function setMoney(enabled)
	local money = stats:FindFirstChild("Money")
	if money then
		if enabled then
			money.Value = 9999999999
		else
			money.Value = 0
		end
	else
		warn("Money non trovato in PlayerStats")
	end
end

local function setSpins(enabled)
	local spins = stats:FindFirstChild("Spins")
	if spins then
		if enabled then
			spins.Value = 999
		else
			spins.Value = 0
		end
	else
		warn("Spins non trovato in PlayerStats")
	end
end

local function setFlowSpins(enabled)
	local flowSpins = stats:FindFirstChild("FlowSpins")
	if flowSpins then
		if enabled then
			flowSpins.Value = 999
		else
			flowSpins.Value = 0
		end
	else
		warn("FlowSpins non trovato in PlayerStats")
	end
end

-- Switch Money
SpinTab:CreateToggle({
	Name = "Unlimited Money",
	CurrentValue = false,
	Callback = function(value)
		setMoney(value)
		local status = value and "attivato" or "disattivato"
		Rayfield:Notify({
			Title = "Blue Lock",
			Content = "Unlimited Money "..status,
			Duration = 3,
		})
	end,
})

-- Switch Spins
SpinTab:CreateToggle({
	Name = "Unlimited Spins",
	CurrentValue = false,
	Callback = function(value)
		setSpins(value)
		local status = value and "attivato" or "disattivato"
		Rayfield:Notify({
			Title = "Blue Lock",
			Content = "Unlimited Spins "..status,
			Duration = 3,
		})
	end,
})

-- Switch FlowSpins
SpinTab:CreateToggle({
	Name = "Unlimited Flow Spins",
	CurrentValue = false,
	Callback = function(value)
		setFlowSpins(value)
		local status = value and "attivato" or "disattivato"
		Rayfield:Notify({
			Title = "Blue Lock",
			Content = "Unlimited Flow Spins "..status,
			Duration = 3,
		})
	end,
})
